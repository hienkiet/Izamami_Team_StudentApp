<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :first_name, class:"form-control", placeholder:"First name, e.g: Le Van" %>
  </div>
  <br>
  <div class="field form-group">
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last name, e.g: An" %>
  </div>
  <br>
  <div class="field form-group">
    <%= form.text_field :email, class:"form-control", placeholder:"Email, e.g: abc123@gmail.com" %>
  </div>
  <br>
  <div class="field form-group">
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone number, e.g: 0123456789" %>
  </div>
  <br>
  <div class="field form-group">
    <%= form.text_field :address, class:"form-control", placeholder:"Address, e.g: Tokyo, Japan" %>
  </div>
  <br>
  <div class="field form-group">
    <%= form.text_field :twitter, class:"form-control", placeholder:"Twitter, e.g: @anlv" %>
  </div>
  <br/>
  <br>
  <div class="actions">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
