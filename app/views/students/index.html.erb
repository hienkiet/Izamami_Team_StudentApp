<h1 style="color:magenta">List Student In The Class</h1>
<br/>
<br/>
<table class="table table-success table-striped table-sm table-bordered table-hover" style="text-align:center">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td><%= student.phone %></td>
        <td><%= student.address %></td>
        <td><%= student.twitter %></td>
        <td><%= link_to 'Show', student, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class:"btn btn-outline-success" %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class:"btn btn-outline-danger" %>


