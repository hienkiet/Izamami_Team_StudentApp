<p id="notice"><%= notice %></p>

<h1>Subject Reviews</h1>

<table class="table table-success table-striped table-sm table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subject_reviews.each do |subject_review| %>
      <tr>
        <td><%= subject_review.name %></td>
        <td><%= subject_review.review %></td>
        <td><%= link_to 'Show', subject_review %></td>
        <td><%= link_to 'Edit', edit_subject_review_path(subject_review) %></td>
        <td><%= link_to 'Destroy', subject_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

