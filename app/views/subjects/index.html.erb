

<h1>Subjects</h1>

<table class="table table-success table-striped table-sm table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Credits</th>
      <th>Tuition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.credits %></td>
        <td><%= subject.tuition %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject', new_subject_path, class:"btn btn-info" %>
