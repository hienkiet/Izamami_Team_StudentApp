<h1 style="color:magenta">Subjects</h1>
<br/>
<br/>
<table class="table table-success table-striped table-sm table-bordered table-hover" style="text-align:center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Credits</th>
      <th>Tuition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.credits %></td>
        <td><%= subject.tuition %></td>
        <td><%= link_to 'Show', subject, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject), class:"btn btn-outline-success" %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject', new_subject_path, class:"btn btn-outline-danger" %>
