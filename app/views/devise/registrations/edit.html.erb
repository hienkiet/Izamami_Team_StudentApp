<br/>
<h2>Edit <%= resource_name.to_s.humanize %> Infomation !</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
  <% f.label :user_name %><br />
  <%= f.text_field :user_name, class:"form-control", placeholder:"Enter here your real nick name !" %>
</div> 

<div class="field form-group">
  <% f.label :user_age %><br />
  <%= f.number_field :user_age, class:"form-control", placeholder:"Enter here your real age !" %>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <br/>
  <div class="field form-group">
    <% f.label :password %> 
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>  <i>(leave blank if you don't want to change it)</i>
    <% end %>
    <%= f.password_field :password, class:"form-control", placeholder:"Enter here new password that you want !", autocomplete: "new-password" %>

  </div>

  <div class="field form-group">
    <% f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"One more time comfirm it , be sure !", autocomplete: "new-password" %>
  </div>
  <br/>
  <div class="field form-group">
    <% f.label :current_password %>
    <%= f.password_field :current_password, class:"form-control",placeholder:"We need your current password to confirm your changes",autocomplete: "current-password" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<br/>
<div class="card border-success mb-3" style="max-width: 30rem;">
  <div class="card-header bg-transparent border-success"  ><h3>Cancel my account</h3></div>
  <div class="card-body">
    <h5 class="card-title">Unhappy?</h5>
    <p class="card-text"><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></p>
  </div>
</div>

<%= link_to "Back", :back, class:"btn btn-dark" %>
